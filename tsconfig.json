{
	"compilerOptions": {
		"baseUrl": "src",
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["src", "vite.config.ts"]
}
